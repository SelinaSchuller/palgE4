<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DreamScape.Pages.Account.CreateAccountWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DreamScape.Pages.Account"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="CreateAccountWindow">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a1a2e" Offset="0.0"/>
                <GradientStop Color="#16213e" Offset="0.5"/>
                <GradientStop Color="#0f3460" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <InfoBar x:Name="ErrorInfoBar"
             Title="Fout bij inloggen"
             Message=""
             Severity="Error"
             IsOpen="False"
             VerticalAlignment="Top"
             HorizontalAlignment="Center"
             Width="500"
             Margin="0,100,0,0"/>

        <Border Background="#222831"
            CornerRadius="10"
            Padding="30"
            Width="350"
            Height="475"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Opacity="0.95">

            <StackPanel VerticalAlignment="Center" Spacing="10">

                <TextBlock Text="DreamScape Interactive"
                       Foreground="#EEEEEE"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

                <TextBlock Text="Gebruikersnaam" Foreground="#EEEEEE"/>
                <TextBox x:Name="usernameTextBox"
                     Height="35"
                     Background="#393E46"
                     Foreground="White"
                     BorderBrush="Transparent"
                     Padding="5"
                     CornerRadius="5"/>

                <TextBlock Text="E-mail" Foreground="#EEEEEE"/>
                <TextBox x:Name="mailTextBox"
                     Height="35"
                     Background="#393E46"
                     Foreground="White"
                     BorderBrush="Transparent"
                     Padding="5"
                     CornerRadius="5"/>

                <TextBlock Text="Wachtwoord" Foreground="#EEEEEE"/>
                <PasswordBox x:Name="PasswordTextBox"
                         Height="35"
                         Background="#393E46"
                         Foreground="White"
                         BorderBrush="Transparent"
                         Padding="5"
                         CornerRadius="5"/>

                <Button x:Name="CreateButton"
                    Content="Opslaan"
                    Click="CreateAccountButton_Click"
                    Background="#00ADB5"
                    Foreground="White"
                    FontSize="16"
                    FontWeight="Bold"
                    Height="40"
                    CornerRadius="5"
                    Margin="0,10,0,0"
                    Padding="10 5">
                </Button>

                <TextBlock Text="Al een account?"
                       Foreground="#EEEEEE"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0"/>

                <Button Click="LoginWindowButton_Click"
                    Content="Log in"
                    Background="Transparent"
                    Foreground="#00ADB5"
                    BorderBrush="Transparent"
                    FontSize="14"
                    HorizontalAlignment="Center"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
