<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="DreamScape.Pages.Player.PlayerDashboardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DreamScape"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1a1a2e" Offset="0.0"/>
                <GradientStop Color="#16213e" Offset="0.5"/>
                <GradientStop Color="#0f3460" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="#222831"
                    Height="60"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="DreamScape Interactive"
                               Foreground="White"
                               FontSize="20"
                               FontWeight="Bold"
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"/>

                    <TextBlock x:Name="UsernameTextBlock"
                               Foreground="White"
                               FontSize="14"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Left"
                               Margin="300,0,0,0"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Background="#222831"
                        Width="200"
                        VerticalAlignment="Stretch">
                    <StackPanel VerticalAlignment="Top" Spacing="10" Margin="10">

                        <TextBlock Text="Navigatie"
                                   Foreground="White"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,10,0,10"
                                   HorizontalAlignment="Center"/>

                        <Button Content="🏠 Dashboard"
                                Click="DashboardButton_Click"
                                Background="Transparent"
                                Foreground="White"
                                BorderBrush="Transparent"
                                FontSize="14"
                                Margin="0,5,0,0"
                                Padding="5"/>

                        <Button Content="🎒 Inventaris"
                                Click="InventoryButton_Click"
                                Background="Transparent"
                                Foreground="White"
                                BorderBrush="Transparent"
                                FontSize="14"
                                Margin="0,5,0,0"
                                Padding="5"/>

                        <Button Content="⚙️ Account Instellingen"
                                Click="SettingsButton_Click"
                                Background="Transparent"
                                Foreground="White"
                                BorderBrush="Transparent"
                                FontSize="14"
                                Margin="0,5,0,0"
                                Padding="5"/>

                        <Button Content="🔄 Handelen"
                                Click="TradeButton_Click"
                                Background="Transparent"
                                Foreground="White"
                                BorderBrush="Transparent"
                                FontSize="14"
                                Margin="0,5,0,0"
                                Padding="5"/>
                    </StackPanel>
                </Border>

                <Frame x:Name="MainFrame"
                       Grid.Column="1"
                       Margin="10"
                       Background="Transparent"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
